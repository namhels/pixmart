<section class="container section articles articles--blog">
  <div class="articles__info">
    <h2 class="title articles__title">Related Articles</h2>
    <a class="hover-underline articles__link" href="#" title="Link to all articles" target="_blank" aria-labelledby="all-articles-link">
      <span id="all-articles-link">Explore All Articles</span>
      <svg class="articles__icon-chevron-right" width="16" height="16" aria-hidden="true">
        <use href="/img/sprite.svg#chevron-right"></use>
      </svg>
    </a>
  </div>
  <ul class="articles__list articles__list--blog">
    {% for i in articles %}
      <li class="articles__item articles__item--blog">
        <a class="articles__art-link" href="{{ i.href }}" title="{{ i.title }}" target="_blank" aria-labelledby="{{ i.aria_labelledby }}">
          <article class="articles__art">
            <picture>
              <source srcset="{{ i.img_desktop_1x }} 1x, {{ i.img_desktop_2x }} 2x" media="(min-width:1440px)" type="image/webp">
              <source srcset="{{ i.img_tablet_1x }} 1x, {{ i.img_tablet_2x }} 2x" media="(min-width:1024px)" type="image/webp">
              <source srcset="{{ i.img_mobile_1x }} 1x, {{ i.img_mobile_2x }} 2x" media="(max-width:1024px)" type="image/webp">
              <img class="articles__img articles__img--blog" src="{{ i.img_desktop_1x }}" alt="{{ i.alt }}" loading="lazy">
            </picture>
            <div class="articles__art-info">
              <h3 class="title-s articles__art-title articles__art-title--blog" id="{{ i.aria_labelledby }}">
                {{ i.name }}
              </h3>
              <p class="articles__date articles__date--blog">{{ i.date }}</p>
            </div>
          </article>
        </a>
      </li>
    {% endfor %}
  </ul>
</section>
